{
  // # Workbench
  "workbench.settings.editor": "json",
  "workbench.editor.enablePreview": true,
  "workbench.colorTheme": "Nord",
  "workbench.layoutControl.enabled": false,
  "workbench.sideBar.location": "right",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 8,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true,
  "workbench.colorCustomizations": {
    "statusBar.background": "#EBCB8B",
    "statusBar.foreground": "#434C5E"
  },

  // # BreadCrumbs
  "breadcrumbs.enabled": false,

  // # Editor
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.cursorBlinking": "blink",
  "editor.minimap.enabled": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontFamily": "Victor Mono, JetBrains Mono, Fira Code",
  "editor.fontSize": 16,
  "editor.lineHeight": 25,
  "editor.letterSpacing": 0.4,
  "editor.cursorWidth": 5,
  "editor.cursorSurroundingLines": 18,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.suggestSelection": "first",
  "editor.fontLigatures": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "entity.name.type.class",
          "keyword",
          "constant",
          "storage.modifier",
          "storage.type.class.js"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "editor.inlineSuggest.showToolbar": "always",
  "editor.linkedEditing": true,

  // # Vim
  "vim.smartRelativeLine": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.searchHighlightColor": "#EBCB8B",
  "vim.searchHighlightTextColor": "#2E3440",
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["revealInExplorer"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },

  // # Files
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "Dockerfile_*": "dockerfile",
    ".env*": "shellscript"
  },

  // # Language Specific
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },

  // # Github
  "github.copilot.enable": {
    "*": true
  },

  // # CSpell
  "cSpell.enabled": true,
  "cSpell.language": "en",

  // # Rest
  "terminal.integrated.env.osx": {},
  "console-ninja.featureSet": "Community",
  "console-ninja.fontSize": 15,
  "workbench.productIconTheme": "icons-carbon",
  "auto-rename-tag.activationOnLanguage": [
    "html",
    "xml",
    "php",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
