{
  "workbench.settings.editor": "json",
  "workbench.editor.enablePreview": true,
  "workbench.colorTheme": "Nord",
  "workbench.colorCustomizations": {
    "statusBar.background": "#EBCB8B",
    "statusBar.foreground": "#434C5E"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "blink",
  "editor.cursorSurroundingLines": 18,
  "breadcrumbs.enabled": false,
  "files.trimTrailingWhitespace": true,
  "editor.fontLigatures": true,
  "editor.lineHeight": 25,
  "editor.letterSpacing": 0.5,
  "editor.cursorWidth": 5,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications",
  "editor.fontFamily": "JetBrains Mono Medium, Fira Code",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.selectionClipboard": true,
  "editor.renderIndentGuides": true,
  "editor.minimap.enabled": false,
  "editor.fontSize": 17,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.suggestSelection": "first",
  "eslint.validate": ["javascript"],
  "explorer.openEditors.visible": 0,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimFinalNewlines": true,
  "files.associations": {
    "Dockerfile_*": "dockerfile"
  },
  "workbench.iconTheme": "file-icons",
  "workbench.sideBar.location": "right",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "typescript.preferences.importModuleSpecifier": "relative",
  "deno.enable": false,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true,
  "cSpell.enabled": true,
  "cSpell.language": "en",
  "cSpell.enableFiletypes": ["vue"],
  "cSpell.userWords": [
    "chakra",
    "commitlint",
    "drups",
    "drupsio",
    "Giorgi",
    "gqlpagenation",
    "influxdata",
    "jsonb",
    "Kapanadze",
    "keyof",
    "mixins",
    "nestjs",
    "orgs",
    "repos",
    "skyworker",
    "typeorm",
    "zuri"
  ],
  "python.linting.pylintArgs": ["--enable=E,W"],
  "python.formatting.provider": "autopep8",
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.defaultDateFormat": null,
  "todo-tree.tree.showScanModeButton": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "python.linting.pylintPath": "/usr/bin/pylint",
  "vim.smartRelativeLine": true,
  "markdown-preview-enhanced.previewTheme": "github-light.css",

  // Vim
  "vim.easymotion": true,
  "vim.easymotionDimBackground": true,
  "vim.easymotionMarkerForegroundColorOneChar": "#BF616A",
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.searchHighlightColor": "#EBCB8B",
  "vim.searchHighlightTextColor": "#2E3440",
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["revealInExplorer"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "vscode-edge-devtools.mirrorEdits": true,
  "remoteHub.commitDirectlyWarning": "off",
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "liveServer.settings.donotShowInfoMsg": true
}
